<ol class="post-list">
    {{#each posts as |post|}}
    <li>
        <article class="post">
            <div class="title">
                <a href="{{post.title}}">{{post.title}}</a>
            </div>
            <div class="meta">
                {{post.post_text}} by {{post.user.username}} on
                {{post.created_at}}
                <br>
                <a href="/post/{{post.id}}">{{post.comments.length}} comment(s)</a>
            </div>
        </article>
    </li>
    {{/each}}
</ol>